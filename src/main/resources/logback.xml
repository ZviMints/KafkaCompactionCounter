<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%level) %cyan(%logger) - %msg %ex %n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.kafka" level="info" />

    <root level="info">
        <appender-ref ref="console" />
    </root>
</configuration>
